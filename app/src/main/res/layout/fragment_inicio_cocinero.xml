<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".pedidos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="?attr/dialogPreferredPadding"
            android:paddingTop="?attr/dialogPreferredPadding"
            android:paddingRight="?attr/dialogPreferredPadding"
            android:text="@string/Pedidospendientes"
            android:textColor="#000000"
            android:textSize="34sp" />



        <TextView
            android:id="@+id/textView2"
            android:layout_marginTop="10sp"
            android:layout_gravity="right"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:paddingStart="?attr/dialogPreferredPadding"
            android:paddingEnd="?attr/dialogPreferredPadding"
            android:text="@string/NumeroMesa"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_gravity="right"
            android:layout_width="133dp"
            android:layout_height="50dp"
            android:entries="@array/spinner_values"
            android:paddingLeft="?attr/dialogPreferredPadding"
            android:paddingRight="?attr/dialogPreferredPadding" />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/OrdenCuenta"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="12dp"
            tools:listitem="@layout/ticket_item" />

        <Button
            android:id="@+id/Notificar"
            android:text="Notificar"
            android:layout_marginTop="34dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="@drawable/btn_personalizado"/>

    </LinearLayout>

</RelativeLayout>
